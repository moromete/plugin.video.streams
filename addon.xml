<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.streams"
       name="Streams"
       version="0.2.3"
       provider-name="Moromete">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>
      Radio/Tv Streams
    </summary>
    <description>
      Radio/Tv Streams
      - Watch internet video/audio streams (sopcast, acestream, http, rtmp, rtsp, mms ...) based on a remote channel list.
      http://streams.magazinmixt.ro
    </description>
    <platform>all</platform>
  </extension>
</addon>
